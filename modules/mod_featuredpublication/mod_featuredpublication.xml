<extension version="1.0.0" client="site" type="module">
	<name>mod_featuredpublication</name>
	<author>HUBzero modified by CANARIE Inc.</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>MOD_FEATUREDPUBLICATION_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_featuredpublication">mod_featuredpublication.php</filename>
		<filename>mod_featuredpublication.xml</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>

	<languages>  
    	<!-- Any language files included with the module -->  
        <language tag="en-GB">language/en-GB/en-GB.mod_featuredpublication.ini</language>  
        <language tag="en-GB">language/en-GB/en-GB.mod_featuredpublication.sys.ini</language>  
	</languages> 

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_FEATUREDPUBLICATION_PARAM_CLASS_LABEL" description="MOD_FEATUREDPUBLICATION_PARAM_CLASS_DESC" />
				<field name="top_number" type="text" default="10" label="MOD_FEATUREDPUBLICATION_PARAM_TOPNUMBER_LABEL" description="MOD_FEATUREDPUBLICATION_PARAM_TOPNUMBER_DESC" />
				<field name="tag" type="text" default="" label="MOD_FEATUREDPUBLICATION_PARAM_TAG_LABEL" description="MOD_FEATUREDPUBLICATION_PARAM_TAG_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="radio" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
